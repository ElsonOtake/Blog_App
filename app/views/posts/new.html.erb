<%= form_with model: @post, url: new_user_post_path do |form| %>
  <div class="form-group">
    <%= form.text_field :title, class: "form-control", placeholder: "Title" %>
  </div>

  <div class="form-group">
    <%= form.text_field :text, class: "form-control", placeholder: "Post text" %>
  </div>

  <div class="form-group">
    <%= form.text_field :author, id: :author_id, class: "form-control", value: @current_user.id, type: :hidden %>
  </div>

  <%= form.submit class:'btn btn-secondary' %>
<% end %>
