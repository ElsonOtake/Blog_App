<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="https://c.tenor.com/uj4Cnt7RVE0AAAAM/fatdog-dog.gif" class="img-fluid rounded-start" alt="user photo">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= @user.name %></h5>
        <p class="card-text"><small class="text-muted">Number of posts: <%= @user.post_counter %></small></p>
      </div>
    </div>
  </div>
</div>

