<% @users.each do |user| %>
  <div class="card m-3 border-0">
    <div class="row g-0">
      <div class="col-md-1">
        <img src="https://c.tenor.com/uj4Cnt7RVE0AAAAM/fatdog-dog.gif" class="img-fluid rounded-start" alt="user photo">
      </div>
      <div class="col-md-11">
        <div class="card m-2">
          <div class="card-body">
            <h5 class="card-title"><%= link_to user.name, user, class: "text-decoration-none" %></h5>
            <p class="card-text text-end" class="text-muted"><small>Number of posts: <%= user.post_counter %></small></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
