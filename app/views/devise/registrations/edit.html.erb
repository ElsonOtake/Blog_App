<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :avatar, class: "label" %>
    <%= f.file_field :avatar, class: "input" %>
  </div>

  <div class="field">
    <%= f.label :name, class: "label" %>
    <div class="control">
      <%= f.text_field :name, class: "input", autocomplete: "name" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :email, class: "label" %>
    <div class="control">
      <%= f.email_field :email, class: "input", autocomplete: "email" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: "label" %>
    <div class="control">
      <%= f.password_field :password, class: "input", autocomplete: "new-password (leave blank if you don't want to change it)" %>
    </div>
    <% if @minimum_password_length %>
      <span class="help has-text-danger"><%= @minimum_password_length %> characters minimum</span>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "label" %>
    <div class="control">
      <%= f.password_field :password_confirmation, class: "input", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :current_password, class: "label" %>
    <div class="control">
      <%= f.password_field :current_password, class: "input", autocomplete: "current-password (we need your current password to confirm your changes)" %>
    </div>
  </div>

  <div class="control">
    <%= f.submit "Update", class:'button is-link is-light' %>
  </div>
<% end %>
<br /><br />
<div class="field is-grouped">
  <p class="subtitle py-1 pr-5">Unhappy?</p>
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:'button is-danger is-light' %>
</div>
